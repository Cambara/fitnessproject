<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
    <persistence-unit name="entityManager" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>br.com.fitnessproject.model.entity.User </class>
        <class>br.com.fitnessproject.model.entity.Body </class>
        <class>br.com.fitnessproject.model.entity.Card </class>
        <class>br.com.fitnessproject.model.entity.Exercise </class>
        <class>br.com.fitnessproject.model.entity.ExerciseName </class>
        <class>br.com.fitnessproject.model.entity.Gym </class>
        <class>br.com.fitnessproject.model.entity.Location </class>
        <class>br.com.fitnessproject.model.entity.Login </class>
        <class>br.com.fitnessproject.model.entity.Photo </class>
         
        <properties>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>